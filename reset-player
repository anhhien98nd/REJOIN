-- 🌸 Reset Character Script (chỉ dành cho acc "tên")
local Players = game:GetService("Players")
local p = Players.LocalPlayer

if not p then
    warn("[Reset] ❌ Không tìm thấy LocalPlayer.")
    return
end

if p.Name ~= "tên" then
    warn("[Reset] 🚫 Bỏ qua — chỉ acc 'tên' mới được reset.")
    return
end

-- 🕒 Hẹn reset sau 79 giây
print("[Reset] ⏳ Sẽ reset nhân vật sau 79 giây cho:", p.Name)

task.delay(79, function()
    if not p or not p.Character then
        warn("[Reset] ⚠️ Không tìm thấy nhân vật tại thời điểm reset.")
        return
    end

    print("[Reset] 🔁 Đang reset nhân vật cho:", p.Name)
    pcall(function()
        p.Character:BreakJoints() -- Giống nút "Reset Character"
    end)

    print("[Reset] ✅ Nhân vật của", p.Name, "đã được reset lúc:", os.date("%X"))
end)
