-- ğŸŒ¸ Auto Reset Script (chá»‰ dÃ nh cho acc "ikkopolconloli")

local Players = game:GetService("Players")
local p = Players.LocalPlayer or Players.PlayerAdded:Wait()

-- ğŸ”’ Giá»›i háº¡n tÃ i khoáº£n
if p.Name ~= "ikkopolconloli" then
    warn("[AutoReset] ğŸš« Bá» qua â€” chá»‰ tÃ i khoáº£n 'ikkopolconloli' má»›i Ä‘Æ°á»£c sá»­ dá»¥ng script nÃ y.")
    return
end

-- ğŸ•’ CÃ¡c má»‘c reset (giÃ¢y)
local resetTimes = {79, 152}

print("[AutoReset] âœ… Script khá»Ÿi Ä‘á»™ng cho:", p.Name)

for _, t in ipairs(resetTimes) do
    task.spawn(function()
        task.wait(t)
        local char = p.Character or p.CharacterAdded:Wait()
        if not char then
            warn(("[AutoReset] âš ï¸ KhÃ´ng tÃ¬m tháº¥y nhÃ¢n váº­t lÃºc %.1fs"):format(t))
            return
        end

        print(("[AutoReset] ğŸ” Reset nhÃ¢n váº­t sau %.1fs..."):format(t))
        pcall(function()
            char:BreakJoints()
        end)

        print(("[AutoReset] âœ… %s Ä‘Ã£ Ä‘Æ°á»£c reset táº¡i %.1fs (%s)"):format(p.Name, t, os.date("%X")))
    end)
end
