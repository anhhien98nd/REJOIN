-- ğŸŒ¸ Auto Reset Script (Ã¡p dá»¥ng cho táº¥t cáº£ player)

local Players = game:GetService("Players")
local p = Players.LocalPlayer or Players.PlayerAdded:Wait()

-- ğŸ•’ CÃ¡c má»‘c thá»i gian reset (giÃ¢y)
local resetTimes = {54, 107}

print(string.format("[AutoReset] âœ… Script khá»Ÿi Ä‘á»™ng cho '%s' lÃºc %s", p.Name, os.date("%X")))

-- âš™ï¸ HÃ m reset an toÃ n
local function safeReset()
	local char = p.Character
	if not char then
		print("[AutoReset] â³ Äang chá» nhÃ¢n váº­t xuáº¥t hiá»‡n Ä‘á»ƒ reset...")
		char = p.CharacterAdded:Wait()
	end

	local hrp = char:FindFirstChild("HumanoidRootPart")
	if hrp then
		print("[AutoReset] ğŸ” Äang reset nhÃ¢n váº­t...")
		pcall(function()
			char:BreakJoints()
		end)
		print("[AutoReset] âœ… ÄÃ£ reset thÃ nh cÃ´ng lÃºc:", os.date("%X"))
	else
		warn("[AutoReset] âš ï¸ KhÃ´ng thá»ƒ reset â€” chÆ°a tÃ¬m tháº¥y HumanoidRootPart.")
	end
end

-- ğŸ•¹ï¸ Táº¡o luá»“ng riÃªng cho tá»«ng má»‘c thá»i gian
for _, t in ipairs(resetTimes) do
	task.spawn(function()
		task.wait(t)
		print(string.format("[AutoReset] ğŸ•’ ÄÃ£ Ä‘áº¿n má»‘c %.1fs â€” chuáº©n bá»‹ reset...", t))
		safeReset()
	end)
end
