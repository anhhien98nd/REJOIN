-- 🌸 Auto Reset Script (chỉ dành cho acc "ikkopolconloli")

local Players = game:GetService("Players")
local p = Players.LocalPlayer or Players.PlayerAdded:Wait()

-- 🔒 Giới hạn tài khoản
if p.Name ~= "ikkopolconloli" then
    warn("[AutoReset] 🚫 Bỏ qua — chỉ tài khoản 'ikkopolconloli' mới được sử dụng script này.")
    return
end

-- 🕒 Các mốc reset (giây)
local resetTimes = {79, 152}

print("[AutoReset] ✅ Script khởi động cho:", p.Name)

for _, t in ipairs(resetTimes) do
    task.spawn(function()
        task.wait(t)
        local char = p.Character or p.CharacterAdded:Wait()
        if not char then
            warn(("[AutoReset] ⚠️ Không tìm thấy nhân vật lúc %.1fs"):format(t))
            return
        end

        print(("[AutoReset] 🔁 Reset nhân vật sau %.1fs..."):format(t))
        pcall(function()
            char:BreakJoints()
        end)

        print(("[AutoReset] ✅ %s đã được reset tại %.1fs (%s)"):format(p.Name, t, os.date("%X")))
    end)
end
