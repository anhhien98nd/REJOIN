-- 🌸 Reset Character Script (chỉ dành cho acc "ikkopolconloli")
local Players = game:GetService("Players")
local p = Players.LocalPlayer

if not p then
    warn("[Reset] ❌ Không tìm thấy LocalPlayer.")
    return
end

if p.Name ~= "ikkopolconloli" then
    warn("[Reset] 🚫 Bỏ qua — chỉ acc 'ikkopolconloli' mới được reset.")
    return
end

-- 🕒 Các mốc thời gian reset (giây kể từ lúc script bắt đầu)
local resetTimes = {79, 152}

print(("[Reset] ✅ Bắt đầu giám sát reset cho: %s"):format(p.Name))

for _, delaySec in ipairs(resetTimes) do
    task.delay(delaySec, function()
        if not p or not p.Character then
            warn(("[Reset] ⚠️ Không tìm thấy nhân vật tại thời điểm reset (%.1fs)."):format(delaySec))
            return
        end

        print(("[Reset] 🔁 Reset nhân vật sau %.1fs cho: %s"):format(delaySec, p.Name))
        pcall(function()
            p.Character:BreakJoints() -- giống nút "Reset Character"
        end)

        print(("[Reset] ✅ %s đã được reset tại %.1fs (%s)"):format(p.Name, delaySec, os.date("%X")))
    end)
end
