-- ğŸŒ¸ Reset Character Script (chá»‰ dÃ nh cho acc "tÃªn")
local Players = game:GetService("Players")
local p = Players.LocalPlayer

if not p then
    warn("[Reset] âŒ KhÃ´ng tÃ¬m tháº¥y LocalPlayer.")
    return
end

if p.Name ~= "tÃªn" then
    warn("[Reset] ğŸš« Bá» qua â€” chá»‰ acc 'tÃªn' má»›i Ä‘Æ°á»£c reset.")
    return
end

-- ğŸ•’ Háº¹n reset sau 79 giÃ¢y
print("[Reset] â³ Sáº½ reset nhÃ¢n váº­t sau 79 giÃ¢y cho:", p.Name)

task.delay(79, function()
    if not p or not p.Character then
        warn("[Reset] âš ï¸ KhÃ´ng tÃ¬m tháº¥y nhÃ¢n váº­t táº¡i thá»i Ä‘iá»ƒm reset.")
        return
    end

    print("[Reset] ğŸ” Äang reset nhÃ¢n váº­t cho:", p.Name)
    pcall(function()
        p.Character:BreakJoints() -- Giá»‘ng nÃºt "Reset Character"
    end)

    print("[Reset] âœ… NhÃ¢n váº­t cá»§a", p.Name, "Ä‘Ã£ Ä‘Æ°á»£c reset lÃºc:", os.date("%X"))
end)
