-- ğŸŒ¸ Reset Character Script (chá»‰ dÃ nh cho acc "ikkopolconloli")
local Players = game:GetService("Players")
local p = Players.LocalPlayer

if not p then
    warn("[Reset] âŒ KhÃ´ng tÃ¬m tháº¥y LocalPlayer.")
    return
end

if p.Name ~= "ikkopolconloli" then
    warn("[Reset] ğŸš« Bá» qua â€” chá»‰ acc 'ikkopolconloli' má»›i Ä‘Æ°á»£c reset.")
    return
end

-- ğŸ•’ CÃ¡c má»‘c thá»i gian reset (giÃ¢y ká»ƒ tá»« lÃºc script báº¯t Ä‘áº§u)
local resetTimes = {79, 152}

print(("[Reset] âœ… Báº¯t Ä‘áº§u giÃ¡m sÃ¡t reset cho: %s"):format(p.Name))

for _, delaySec in ipairs(resetTimes) do
    task.delay(delaySec, function()
        if not p or not p.Character then
            warn(("[Reset] âš ï¸ KhÃ´ng tÃ¬m tháº¥y nhÃ¢n váº­t táº¡i thá»i Ä‘iá»ƒm reset (%.1fs)."):format(delaySec))
            return
        end

        print(("[Reset] ğŸ” Reset nhÃ¢n váº­t sau %.1fs cho: %s"):format(delaySec, p.Name))
        pcall(function()
            p.Character:BreakJoints() -- giá»‘ng nÃºt "Reset Character"
        end)

        print(("[Reset] âœ… %s Ä‘Ã£ Ä‘Æ°á»£c reset táº¡i %.1fs (%s)"):format(p.Name, delaySec, os.date("%X")))
    end)
end
